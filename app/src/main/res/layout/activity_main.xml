<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_alignTop="@+id/weatherServiceResponseTextView"
        android:layout_centerHorizontal="true" >

        <RelativeLayout android:id="@+id/InnerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView android:text="@string/forcastSummary" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forcastTitleTextView"
                android:textStyle="bold" />
            <TextView android:text="" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forcastSummaryTextView"
                android:layout_toRightOf="@+id/forcastTitleTextView"
                android:layout_marginLeft="5dp"
                android:textStyle="bold" />

            <TextView android:text="@string/callingWeatherService" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:id="@+id/weatherServiceResposneTitleTextView"
                android:layout_below="@+id/forcastTitleTextView"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weatherServiceResponseTextView"
                android:layout_below="@+id/weatherServiceResposneTitleTextView"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:singleLine="false" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
